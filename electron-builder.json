{
  "appId": "Pack3D",
  "productName": "Pack3D",
  "copyright": "Copyright Â© 2022 Mike Orozco @notmike101 <me@mikeorozco.dev>",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg"
    ]
  },
  "win": {
    "target": [
      {
        "target": "msi",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "./logo.ico",
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "./logo.ico"
  },
  "extraFiles": [
    "./ktx.dll",
    "./ktx2check.exe",
    "./ktx2ktx2.exe",
    "./ktxinfo.exe",
    "./ktxsc.exe",
    "./toktx.exe"
  ]
}
